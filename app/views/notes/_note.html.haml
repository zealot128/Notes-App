.note.teaser

  .viewport
    %h2.title=link_to note.title, note
    .content=raw note.html
  - if not full and note.has_link?
    .link
      = link_to  note.link, :class => "button url", :target => "_blank", :title => note.link do
        .tip
          .tip-content
            = image_tag note.preview(:thumb)
            .tip-link= note.link
        = note.domain
  .cover
  .cover2
